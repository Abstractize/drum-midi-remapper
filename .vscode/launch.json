{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CLI",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/CLI/bin/Debug/net9.0/CLI",
            "cwd": "${workspaceFolder}/src/CLI",
            "args": [
                "GuitarPro",
                "StevenSlate",
                "${workspaceFolder}/midis/test.mid"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch API",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/API/bin/Debug/net9.0/API",
            "cwd": "${workspaceFolder}/src/API",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "internalConsole"
        }
    ]
}